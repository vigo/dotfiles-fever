export COLOR_OFF=$'\e[0m'

black=$'\e[0;30m'
red=$'\e[0;31m'
green=$'\e[0;32m'
yellow=$'\e[0;33m'
blue=$'\e[0;34m'
magenta=$'\e[0;35m'
cyan=$'\e[0;36m'
white=$'\e[0;37m'
gray=$'\e[0;90m'

bold=$'\e[1m'
underline=$'\e[4m'
reverse=$'\e[7m'
blink=$'\e[5m'

white_on_blue=$'\e[01;44;37m'
white_on_red=$'\e[01;41;37m'
white_on_black=$'\e[01;41;30m'