export COLOR_OFF=$(tty -s && tput sgr0)

black=$(tty -s && tput setaf 0)
red=$(tty -s && tput setaf 1)
green=$(tty -s && tput setaf 2)
yellow=$(tty -s && tput setaf 3)
blue=$(tty -s && tput setaf 4)
magenta=$(tty -s && tput setaf 5)
cyan=$(tty -s && tput setaf 6)
white=$(tty -s && tput setaf 7)
gray=$(tty -s && tput setaf 8)

bold=$(tty -s && tput bold)
underline=$(tty -s && tput smul)
reverse=$(tty -s && tput rev)
blink=$(tty -s && tput blink)
